<div class="container text-center">

  <h1 class="mb-4">New Game</h1>

  <div class="letters justify-content-center mb-4">
    <% @letters.each do |letter| %>
      <div class="letter">
        <%= letter %>
      </div>
    <% end %>
  </div>

  <form action="score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="mb-3">
    <input
      type="text"
      name="word"
      class="form-control form-control-lg"
      placeholder="What's the longest word you can find?"
    >
  </div>
    <button type="submit" class="btn btn-primary btn-lg">Play</button>
  </form>
</div>
